{
  "name": "hhigh-translation",
  "version": "1.0.0",
  "description": "A TypeScript Node.js app to extract, translate and re-enter text into InDesign IDML files",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "jest",
    "clean": "rm -rf dist",
    "submit": "tsx src/scripts/submit-translation.ts",
    "download": "tsx src/scripts/download-translation.ts",
    "extract": "tsx src/scripts/extract-text.ts",
    "debug-idml": "tsx src/scripts/debug-idml.ts"
  },
  "keywords": ["indesign", "idml", "translation", "webhook", "typescript"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "jszip": "^3.10.1",
    "xml2js": "^0.6.2",
    "axios": "^1.6.0",
    "uuid": "^9.0.1",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@types/xml2js": "^0.4.14",
    "jest": "^29.7.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  }
}
