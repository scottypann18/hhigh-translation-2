{
  "name": "hhigh-translation",
  "version": "1.0.0",
  "description": "A TypeScript Node.js app to extract, translate and re-enter text into InDesign IDML files",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "cli": "node dist/index.js",
    "server": "tsx src/server.ts",
    "server:build": "npm run build && node dist/server.js",
    "dev": "tsx watch src/index.ts",
    "test": "jest",
    "clean": "rm -rf dist",
    "pre-run": "tsx src/scripts/pre-run.ts",
    "pre-run-xmle": "tsx src/scripts/pre-run-xmle.ts",
    "submit": "tsx src/scripts/submit-translation.ts",
    "download": "tsx src/scripts/download-translation.ts",
    "debug-idml": "tsx src/scripts-debugging/debug-idml.ts"
  },
  "keywords": [
    "indesign",
    "idml",
    "translation",
    "webhook",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@clerk/clerk-sdk-node": "^4.13.23",
    "@clerk/express": "^1.7.42",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jszip": "^3.10.1",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.1",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@types/xml2js": "^0.4.14",
    "jest": "^29.7.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  }
}
